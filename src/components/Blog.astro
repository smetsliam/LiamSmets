---
// component imports
import PostCard from "../components/PostCard.astro";

// utils imports
import { formatBlogPosts } from "../js/utils";

const allPosts = await Astro.glob("../pages/docs/*.md");
const formattedPosts = formatBlogPosts(allPosts, {
    limit: 2
});
---
<section
    class="flex flex-col gap-24 pt-60"
    id="projects">
    <div class="flex flex-col gap-2 text-center">
      <h4 class="text-3xl font-semibold sm:text-4xl md:text-5xl">
        My <span class="poppins text-primary">personal</span> blog!
      </h4>
      <p>
        Do you wanna see more blogs like this? Click on the button below
      </p>
      <br>
      <a
			href="/blog"
>
			<button
				class="buttonShadow lg:mr-auto lg:ml-0 text-base sm:text-lg md:text-xl poppins relative overflow-hidden px-6 py-3 group rounded-full bg-black text-white dark:bg-white dark:text-slate-950">
				<div
					class="absolute top-0 right-full w-full h-full bg-primary opacity-20 group-hover:translate-x-full z-0 duration-200" />
				<h2 class="relative z-9 flex flex-row items-center">
					More blogs here :)
					<span class="hidden md:inline-block">
						
					</span>
				</h2>
			</button>
		</a>
    </div>
    
    <div class="grid gap-6 xl:grid-cols-3 md:grid-cols-2 md:gap-10">
        {
            formattedPosts.map((post) => (
              <PostCard
                frontmatter={post.frontmatter}
                url={post.url}
                tagType="h3"
              />
            ))
          }
    </div>
  </section>